page {
  background-color: #ff4965;
}

.codeCon {
  width: 700rpx;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 10rpx;
}
.codeCon .name{
  font-size: 36rpx;
  color: #333;
  font-weight: 700;
}
.codeCon .name_con{
  width: 100%;
  height: 200px;
  position: relative;
}
.codeCon .name_con .pos_abs{
  position: absolute;
  left: 50%;
  margin-left: -100px;
}
.codeCon .name image{
    width: 44rpx;
    height: 44rpx;
}
.codeCon .name .up{
  transform: rotate(180deg);
}

.codeCon .title {
  width: 700rpx;
  color: #333;
  letter-spacing: 4rpx;
  font-size: 30rpx;
  padding-top: 40rpx;
  text-align: center;
}
.codeCon .shop_img{
  display: block;
  margin: 0 auto;
  width: 85rpx;
  height: 85rpx;
  padding-top: 50rpx;
  margin-bottom: 30rpx;
}

.text_con {
  width: 400rpx;
  height: 50rpx;
  margin: 0 auto;
  padding-bottom: 70rpx;
}

.text_list1 {
  border-right: 6rpx solid #b3b3b3;
}

.text_con .text_list {
  width: 200rpx;
  text-align: center;
  height: 50rpx;
  color: #ff4965;
}

.input_con {
  position: relative;
  width: 400rpx;
  height: 90rpx;
  margin: 0 auto;
  border: 3rpx solid #e0e0e0;
  border-radius: 10rpx;
  margin-bottom: 70rpx;
}
.input_con image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 25rpx;
  top: 25rpx;
}
.codeCon input {
  width: 400rpx;
  height: 90rpx;
  padding-left: 75rpx;
}
.qrcode {
    height: 420rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
}

.qrcode > canvas {
    width: 420rpx;
    height: 420rpx;
}