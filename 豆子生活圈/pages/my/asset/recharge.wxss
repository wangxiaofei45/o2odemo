.body{
  margin-bottom: 100rpx;
}
.header{
  background-color: #ffffff;
  
}
.header .title{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  color: #333333;
  font-size: 30rpx;
  padding-left: 30rpx;
  letter-spacing: 5rpx;
  font-weight: 700;
}
.header_con{
  background-color: #fff;
  margin-bottom: 22rpx;
  padding-bottom: 50rpx;
}
.money{
  text-align: center;
  width: 700rpx;
  height: 120rpx;
  line-height: 100rpx;
  margin: 0 auto;  
  font-size: 80rpx;
  background-image: url(http://o2o.hzlwo.com/wxapp/image/my/line.png);
}
/*修改自定义充值*/
.h{
  background-color: #ffffff;
  margin-bottom: 14rpx;
}
.t{
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  width: 700rpx;
  margin: 0 auto;
  height: 130rpx;
  line-height: 130rpx;
}
.t .t2{
  color: #ff4965
}
.t .t2 image{
  width: 44rpx;
  height: 44rpx;
}
.h .s{
  width: 700rpx;
  height: 110rpx;
  margin: 0 auto;
  line-height: 110rpx;
  text-align: right
}
.red{
  color: #ff4965;
}
.input{
  width: 660rpx;
  height: 140rpx;
  margin: 0 auto;
  border: 1rpx solid #d6d6d6;
  border-radius: 10rpx;
  position: relative;
}
.input input{
  width: 550rpx;
  height: 80rpx;
}
.input .pos_a{
  font-size: 48rpx;
  font-weight: 700;
}
/*添加自定义充值*/
.button{
  width: 700rpx;
  margin: 0 auto;
  margin-top: 60rpx;
  padding-bottom: 45rpx;
}
.button button{
  width: 220rpx;
  height: 90rpx;
  margin: 0rpx;
  background-color: #ffffff;
  color: #ff4965;
  margin-bottom: 10rpx;
  margin-right: 15rpx;
}
.button button:nth-child(3n){
  margin-right: 0rpx;
}
.button .active{
  background-color: #ff4965;
  color: #ffffff;
}
/*复选框*/
.lists {
  /* display: block; */
  width: 100%;
  height: 140rpx;
  border-bottom: 3rpx solid #d6d6d6;
  background-color: #ffffff;
}
.lists .left{
  margin-left: 25px;
}
.lists .right{
  margin-right: 25px;
}
.lists .left image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 15rpx;
}
.sure_con {
  width: 100%;
  height: 115rpx;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  background-color: #ffffff
}
.sure{
  width: 700rpx;
  height: 90rpx;
  color: #ffffff;
  background-color: #ff4965;
  position: fixed;
  left: 25rpx;
  bottom: 25rpx;
}