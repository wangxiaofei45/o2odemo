<form bindsubmit="formSubmit">
  <view class='section1con border_top'>
    <view class="section1 border_bottom flex_between">
      <view class='left flex_start'>
        <input placeholder="输入验证码" name="captcha" bindblur="inputCheckCode" disabled="{{is_validCode}}" type="number" />
      </view>
      <button class='right' bindtap="sendValidCode" type="default">{{verifyCodeTime}}</button>
    </view>
  </view>

  <view class="section">
    <input class='border_bottom' type='password' name="member_passwd" password bindchange='inputNewpasswd' placeholder="请输入密码" />
  </view>
  <view class="section border">
    <input type='password' password bindblur='inputConfirmNewpasswd' value='' name="confirm_newpasswd" placeholder="请确认新密码" disabled='{{confirmNewPwdDisable}}' />
  </view>

  <view class="btn-area">
    <button formType="submit" disabled="{{updatePwdDisable}}">提交</button>
  </view>

</form>