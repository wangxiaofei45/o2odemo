.section{
  width: 100%;
  background-color: #fff;
}
.section input{
  width: 700rpx;
  height: 100rpx;
  margin: 0 auto;
  border-bottom: 3rpx solid #d6d6d6;
  font-size: 28rpx;
}
.btn-area{
  margin-top: 80rpx;
}
.btn-area button{
  width: 700rpx;
  color: #fff;
  background-color: #ff4965;
}
.section1con{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}

.section1con .section1{
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
  width: 700rpx;
  height: 100rpx;
  margin: 0 auto;
  background-color: #fff;
  border-bottom: 3rpx solid #d6d6d6;
}
.section1con .section1 .right{
  color: #ff4965;
  height: 60rpx;
  line-height: 60rpx;
}
.section1con .section1 input{
  padding-left: 30rpx;
}
.section1con .bordernone{
  border: none;
}
.border{
  border-bottom: 3rpx solid #d6d6d6;
}
.section1con .section1 .left .name{
   width: 100rpx; 
}