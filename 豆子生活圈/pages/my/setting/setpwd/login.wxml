<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section" wx:if="{{is_exist}}">
    <input type='password' name="member_passwd" password bindchange='checkOldPasswd' placeholder="请输入原密码"/>
  </view>
    <view class="section">
    <input type='password' password bindblur='inputNewpasswd' value='' name="new_passwd" placeholder="请输入新密码" disabled='{{newPwdDisable}}' />
  </view>
    <view class="section">
    <input type='password' password bindblur='inputConfirmNewpasswd' value='' name="confirm_newpasswd" placeholder="请确认新密码" disabled='{{confirmNewPwdDisable}}' />
  </view>
  <view class="btn-area">
    <button formType="submit">确认修改</button>
  </view>
</form>