.title{
  width: 750rpx;
  height: 100rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  padding: 25rpx;
  box-sizing: border-box;
}
.section{
  width: 100%;
  background-color: #fff;
}
.section input{
  width: 700rpx;
  height: 100rpx;
  margin: 0 auto;
  font-size: 28rpx;
}
.border_top{
  border-top: 1rpx solid #d6d6d6;
}
.border_bottom{
  border-bottom: 1rpx solid #d6d6d6;
}
.btn-area{
  margin-top: 80rpx;
}
.btn-area button{
  width: 700rpx;
  color: #fff;
  background-color: #ff4965;
}
.section1con{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}

.section1con .section1{
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
  width: 700rpx;
  height: 100rpx;
  margin: 0 auto;
  background-color: #fff;
  border-bottom: 3rpx solid #d6d6d6;
}
.section1con .section1 .right{
  background-color: #ff4965;
  color: #fff;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  padding: 0rpx;
  margin: 0rpx;
}
.border{
  border-bottom: 3rpx solid #d6d6d6;
}