  -->
  <view class="section">
    <input type='number' password bindblur='inputNewpaypwd' value='' name="new_paypwd" placeholder="请输入新密码" maxlength="6"/>
  </view>
  <view class="section">
    <input type='number' password bindblur='inputConfirmNewpaypwd' value='' name="confirm_newpaypwd" placeholder="请确认新密码"  maxlength="6" disabled='{{confirmNewpaypwdDisable}}' />
  </view>

  <view class='section1con border'>
    <view class="section1 bordernone flex_between">
      <view class='left flex_start'>
        <view class='name'>
          验证码
        </view>
        <input placeholder="验证码" name="captcha" bindblur="inputCheckCode" disabled="{{is_validCode}}" type="number" />
      </view>
      <button class='right' bindtap="sendValidCode" type="default" disabled="{{validCodeDisable}}">{{verifyCodeTime}}</button>
    </view>
  </view>

  <view class="btn-area">
    <button formType="submit" disabled="{{updatePaypwdDisable}}">确认修改</button>
  </view>
</form>