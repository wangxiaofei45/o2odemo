<form bindsubmit="formSubmit" bindreset="formReset">
  <!--
  <view class="section" wx:if="{{is_exist}}">
    <input type='number' password bindblur='checkOldPaypwd' value='' name="old_paypwd" placeholder="请输入原密码" maxlength="6" />
