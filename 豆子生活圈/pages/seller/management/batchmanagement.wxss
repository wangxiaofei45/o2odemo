/*过滤*/
.filter{
  width: 750rpx;
  height: 80rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #d6d6d6;
  font-size: 30rpx;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
}
.filter image{
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}
.filter .active{
  transform: rotate(180deg); 
}
.filter .left{
  width: 40%;
  height: 32rpx;
  line-height: 32rpx;
  border-right: 1rpx solid #d6d6d6;
  position: relative;
}
.filter .left .left_pos{
  width: 750rpx;
  height: 1760rpx;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  left: 0rpx;
  top: 57rpx;
}
.filter .left .left_pos image{
  width: 44rpx;
  height: 44rpx;
}
.filter .left .left_pos .list{
  width: 750rpx;
  height: 80rpx;
  padding: 0rpx 25rpx;
  box-sizing: border-box;
  line-height: 80rpx;
  border-bottom: 1rpx solid #d6d6d6;
  background-color: #fff;
}
.filter .center{
  width: 40%;
  height: 32rpx;
  line-height: 32rpx;
  border-right: 1rpx solid #d6d6d6;
  position: relative;
}
.filter .center .left_pos{
  width: 750rpx;
  height: 1760rpx;
  background-color:rgba(0, 0, 0, 0.5);
  position: absolute;
  left: -100%;
  top: 57rpx;
}
.filter .center .left_pos image{
  width: 44rpx;
  height: 44rpx;
}
.filter .center .left_pos .list{
  width: 750rpx;
  height: 80rpx;
  background-color: #fff;
  padding: 0rpx 25rpx;
  box-sizing: border-box;
  line-height: 80rpx;
  border-bottom: 1rpx solid #d6d6d6;
}
.filter .right{
  width: 20%;
  height: 32rpx;
  line-height: 32rpx;
  padding: 24rpx 0rpx;
}
.filterright{
  width: 100%;
  height: 100%;
  background-color: #ffffff;
  z-index: 100;
  position: fixed;
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
}
.filterright .title{
  width: 700rpx;
  height: 36rpx;
  line-height: 36rpx;
  margin: 0 auto;
  font-size: 32rpx;
  color: #333333;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.filterright .title .left{
  width: 10rpx;
  height: 36rpx;
  background-color: #ffcb65;
  border-radius: 5rpx;
  margin-right: 15rpx;
}
.filterright .list_cons{
  width: 700rpx;
  margin: 0 auto;
}
.filterright .list_cons .list{
  width: 142rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  background-color: #f5f5f5;
  border: 1rpx solid #ebebeb;
  box-sizing: border-box;
  border-radius: 5rpx;
  margin-right: 44rpx;
  margin-bottom: 35rpx;
}
.filterright .list_cons .active{
  background-color: #fae5e3;
  border: 1rpx solid #ff4965;
}
.filterright .list_cons .list:nth-child(4n){
  margin-right: 0rpx;
}
.filterright .bottom{
  width: 750rpx;
  height: 90rpx;
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  border-top: 1rpx solid #d6d6d6;
  box-sizing: border-box;
}
.filterright .bottom .left{
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}
.filterright .bottom .right{
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
   text-align: center;
  background-color: #ff4965;
  color: #ffffff;
}