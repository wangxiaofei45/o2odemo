<view class="seach_title clearfix">
  <view class="position1 clearfix">
    <image src='{{imgUrl}}/position.png'></image>
    <view class='text'>{{location}}</view>
  </view>
  <view class='input'>
    <input bindfocus='bindfocus' placeholder='请输入店铺的名称或类目关键字'></input>
    <image src='{{imgUrl}}/search.png'></image>
  </view>
  <view class='code' bindtap="tapScanCode">
    <image  src='{{imgUrl}}/ScanQRCode.png'></image>
    <view hidden='{{hiddenScanCode}}' class='pull_down'>
      <view class="list">
        <view bindtap='Richscan' class='list_cons flex_start'>
          <image src='{{imgUrl}}/RichScan.png'></image>
          <view>
            扫一扫
          </view>
        </view>
      </view>
      <view class="list">
        <navigator url='../pay/payCode/payCode'>
          <view class='list_cons flex_start'>
            <image src='{{imgUrl}}/code.png'></image>
            <view>
              付款码
            </view>
          </view>
        </navigator>
      </view>
      <view class="list">
        <navigator url='../pay/collect/collectMoney'>
          <view class='list_cons flex_start'>
            <image src='{{imgUrl}}/code.png'></image>
            <view>收款码</view>
          </view>
        </navigator>
      </view>
      <view class="list" wx:if="{{is_codeowner}}">
        <navigator url='../my/codeowner/qrcode'>
          <view class='list_cons flex_start'>
            <image src='{{imgUrl}}/code.png'></image>
            <view>邀请码</view>
          </view>
        </navigator>
      </view>
    </view>
  </view>
</view>
<!-- 轮播图 -->
<swiper class="swiper" indicator-dots="{{indicatorDots}}" indicator-color="{{indicatorColor}}" indicator-active-color="{{indicatorActiveColor}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
  <block wx:for="{{bannerlist}}" wx:key="banner">
    <swiper-item class="swippers">
      <navigator url="{{item.link}}">
      <image src="{{item.imgurl}}" class="slide-image" />
      </navigator>
    </swiper-item>
  </block>
</swiper>
<!--submenu-->
<view class="bars">
  <view class='bar_con'>
    <view bindtap='tapSubmenu' class='con_list' hover-class='con_list_active' wx:for="{{submenu}}" wx:key="tabbar" data-id="{{item.class_id}}" data-name="{{item.class_name}}">
      <image src='{{item.class_image}}'></image>
      <view>
        {{item.class_name}}
      </view>
    </view>
  </view>
</view>
