<scroll-view class="show_con" scroll-into-view="{{toView}}" scroll-y="true" scroll-with-animation="true">
  <view class='show_list' wx:for="{{storelist}}" wx:key="*this">
    <view class='list_con clearfix'>
      <image catchtap='open_store' data-class_id="{{item.class_id}}" data-pc_id="{{item.parent_class_id}}" data-chain_id="{{item.chain_id}}" src='{{item.store_logo}}'></image>
      <view class='right'>
        <view class='title_con clearfix'>
            <view class='title' catchtap='open_store' data-class_id="{{item.class_id}}" data-pc_id="{{item.parent_class_id}}" data-chain_id="{{item.chain_id}}">
              {{item.chain_name}}
            </view>
          <view class='nav' bindtap='tapOpenLocation' data-lng="{{item.lng}}" data-lat="{{item.lat}}" data-name="{{item.store_name}}" data-tel="{{item.address}}">
            <image src='{{imgUrl}}/navigation.png'></image>
            {{item.distance}}
          </view>
        </view>
        <view class='text1' catchtap='open_store' data-class_id="{{item.class_id}}" data-pc_id="{{item.parent_class_id}}" data-chain_id="{{item.chain_id}}" >
            {{item.class_name}}
            <block wx:if="{{item.store_side != ''}}">
            [{{item.store_side}}]
            </block>
        </view>
        <view class='text2'>地址：{{item.address}}</view>
        <view class='button clearfix' wx:if="{{item.is_discount != ''}}" wx:for="{{item.is_discount}}"  wx:key="*this" wx:for-item="discount">          
            <button>{{discount}} </button>
        </view>
        <view class='text3' wx:if="{{item.activity != ''}}">
          {{item.activity}}
        </view>
        <view class='button' wx:if="{{item.rate_customer&&item.rate_customer!=0?true:false}}">
           <button>{{item.rate_customer}}%积分</button>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
