.mian_info{
  width: 750rpx;
  background-color: #fff;
  padding: 25rpx;
  box-sizing: border-box;
}
.mian_info .name{
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.mian_info .deriction{
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.center_bottom{
  border-bottom: 1rpx solid #d6d6d6;
  padding-bottom: 25rpx;
}
.center_bottom .left{
  color: #ff4965;
  font-size: 24rpx;
}
.center_bottom .left .big{
  font-size: 36rpx;
}
.center_bottom .right{
  font-size: 22rpx;
  color: #ff4965;
  border: 1rpx solid #ff4965;
  padding: 5rpx;
  box-sizing: border-box;
}
.shop_name{
  padding-top: 15rpx;
  color: #333;
  font-size: 26rpx;
}
.shop_name  image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 15rpx;
}
.shop_name .right{
  border-left: 1rpx solid #d6d6d6;
  padding-left: 15rpx;
}
.show_more{
  margin-top: 22rpx;
  background-color: #fff;
}
.show_more .text{
  width: 700rpx;
  padding: 40rpx 25rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #333;
}
.show_more image{
  width: 100%;
}
.telmodel {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}

.telmodel button {
  width: 700rpx;
  height: 90rpx;
  margin-left: 25rpx;
}

.telmodel button:nth-child(1) {
  position: absolute;
  left: 0rpx;
  bottom: 218rpx;
  color: #ff4965;
}

.telmodel button:nth-child(2) {
  position: absolute;
  left: 0rpx;
  bottom: 100rpx;
  color: #333;
}